<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9F5C92B"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".SplashActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:drawableTop="@drawable/schoolbus"
        android:fontFamily="@font/amarante"
        android:text=" SCHOOL BUS TRACKING "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:gravity="center">

    <ImageView
        android:id="@+id/imbus"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:src="@drawable/ukk" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:drawableTop="@drawable/ic_school_black_24dp"
        android:fontFamily="@font/el_messiri_medium"
        android:text=" LOVELY PROFESSIONAL UNIVERSITY "
        android:textAlignment="center"
        android:textColor="#FF5900"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>