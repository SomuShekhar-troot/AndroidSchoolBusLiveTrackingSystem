<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.example.capstoneproject.LoginFragment"
    android:background="@drawable/ukk_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="50dp"
        android:background="@drawable/uday_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:text=" SIGN IN "
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"/>

    <ImageView
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:src="@drawable/cartoonbus" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:drawablePadding="10dp"
        android:background="@drawable/yash"
        android:hint=" EMAIL "
        android:elevation="5dp"
        android:textColorHint="#606060"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/etEmail"
        android:padding="20dp"
        android:drawableStart="@drawable/ic_mail_outline_black_24dp"
        android:textSize="18sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColorHint="#606060"
            android:layout_marginEnd="20dp"
            app:passwordToggleEnabled="true">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_lock_open_black_24dp"
        android:drawablePadding="10dp"
        android:background="@drawable/yash"
        android:inputType="textPassword"
        android:textColorHint="#606060"
        android:ems="10"
        android:hint=" PASSWORD "
        android:id="@+id/etPassword"
        android:padding="20dp"
        android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp">

    <Button
        android:text="Login"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="230dp"
        android:id="@+id/btnLogin"
        android:fontFamily="sans-serif-condensed-medium"
        android:background="@drawable/button_effect"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20sp" />

    <Button
        android:text="Back"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_effect"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#ffffff"
        android:layout_marginStart="100dp"
        android:textStyle="bold"
        android:id="@+id/btnBack" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Don't have an Account "
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="150dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_effect"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:text="SIGN UP"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginEnd="50dp"
            android:id="@+id/udayreg"
            android:layout_marginTop="30dp"/>

</LinearLayout>

</LinearLayout>
